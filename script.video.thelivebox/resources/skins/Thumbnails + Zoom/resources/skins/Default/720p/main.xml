<?xml version="1.0" encoding="utf-8"?>
<window>    
    <allowoverlay>no</allowoverlay>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
   <defaultcontrol always="true">59</defaultcontrol>

    <controls>
        <control type="image">
            <description>Background Image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>lb_background.jpg</texture>
            <fadetime>500</fadetime>
        </control> 
		
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>                
			<fadetime>500</fadetime>					
			<texture>$INFO[ListItem.Property(Fanart)]</texture>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="image">
            <description>Floor Image</description>
            <posx>0</posx>
            <posy>100r</posy>
            <width>1280</width>
            <height>100</height>
            <texture>lb_floor.png</texture>
            <fadetime>250</fadetime>
        </control> 
		
		<control type="image">
			<posx>0</posx>
			<posy>-40</posy>
			<width>1280</width>
			<height>120</height>
			<texture flipy="true">lb_HomeNowPlayingBack.png</texture>
		</control>
		
		<control type="image">
			<description>Header image</description>
			<posx>20</posx>
			<posy>3</posy>
			<width>35</width>
			<height>35</height>
			<aspectratio>keep</aspectratio>
			<texture>lb_icon_video.png</texture>
		</control>
		
		<control type="label">
			<posx>65</posx>
			<posy>5</posy>
			<textcolor>white</textcolor>
			<font>font13</font>
			<label>$INFO[Window(10000).Property(LB_TITLE)]</label>
		</control>]			
		
		<control type="label">
			<description>time label</description>
			<posx>20r</posx>
			<posy>5</posy>
			<width>200</width>
			<height>30</height>
			<align>right</align>
			<aligny>center</aligny>
			<font>font28_title</font>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<label>$INFO[System.Time]</label>
            <animation effect="slide" start="0,0" end="-40,0" time="100" condition="Window.IsVisible(Mutebug)">conditional</animation>			
		</control>
		
		<control type="image">
			<posx>75</posx>
			<posy>60</posy>
			<width>1130</width>
			<height>600</height>
			<texture border="15">lb_ContentPanel.png</texture>
		</control>
		<control type="image">
			<posx>75</posx>
			<posy>652</posy>
			<width>1130</width>
			<height>64</height>
			<texture border="15">lb_ContentPanelMirror.png</texture>
		</control>
		
		<control type="panel" id="59">
				<posx>90</posx>
				<posy>80</posy>
				<width>1080</width>
				<height>558</height>
				<onleft>59</onleft>
				<onright>159</onright>
				<onup>59</onup>
				<ondown>59</ondown>				
				<pagecontrol>159</pagecontrol>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<itemlayout height="186" width="216">
					<control type="image">
						<posx>1</posx>
						<posy>0</posy>
						<width>214</width>
						<height>160</height>
						<aspectratio>scale</aspectratio>
						<bordertexture border="5">button-nofocus.png</bordertexture>
						<bordersize>5</bordersize>
						<texture>$INFO[Listitem.Icon]</texture>
					</control>
					<control type="label">
						<posx>8</posx>
						<posy>160</posy>
						<width>200</width>
						<height>25</height>
						<font>font12</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<info>ListItem.Label</info>
					</control>					
				</itemlayout>
				<focusedlayout height="186" width="216">
					<control type="image">
						<posx>1</posx>
						<posy>0</posy>
						<width>214</width>
						<height>160</height>
						<aspectratio>scale</aspectratio>
						<bordertexture border="5">folder-focus.png</bordertexture>
						<bordersize>5</bordersize>
						<texture>$INFO[Listitem.Icon]</texture>
						<animation center="107,80" effect="zoom" end="140" time="200">Focus</animation>
					</control>
					<control type="label">
						<posx>10</posx>
						<posy>162</posy>
						<width>200</width>
						<height>25</height>
						<font>font13</font>
						<textcolor>black</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<info>ListItem.Label</info>
					</control>					

					<control type="label">
						<posx>8</posx>
						<posy>160</posy>
						<width>200</width>
						<height>25</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<info>ListItem.Label</info>
					</control>					
				</focusedlayout>
			</control>
			
			<control type="scrollbar" id="159">
				<posx>1170</posx>
				<posy>85</posy>
				<width>25</width>
				<height>550</height>
				<texturesliderbackground border="0,14,0,14">lb_ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">lb_ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14">lb_ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>lb_ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>lb_ScrollBarNib.png</textureslidernibfocus>
				<onleft>59</onleft>
				<onright>3010</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>Control.IsVisible(59)</visible>
			</control>
			
    </controls>
</window>
